<Window x:Class="Vistas.VistaPreviaDeImpresionVentas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VistaPreviaDeImpresionVentas"  Height="452" Width="1050"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown" Topmost="False">

    <!--FONDO DONDE SE ENCUENTRA LA IMAGEN-->
    <Border CornerRadius="35" Width="1052">
        <!--CONTENEDOR DE LA IMAGEN-->
        <Border.Background>
            <ImageBrush ImageSource="/Vistas;component/Images/fondoForm3.png"
                        Stretch="UniformToFill"/>
        </Border.Background>

        <!--FONDO DEL FORMULARIO-->
        <Border CornerRadius="20" 
                BorderThickness="5"
                Opacity="0.90" Width="1055">
            <!--BORDE GRADIENTE-->
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"/>
                    <GradientStop Color="#DA34AE" Offset="0.75"/>
                    <GradientStop Color="#8A16C1" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <!--FONDO GRADIENTE-->
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#060531" Offset="0"/>
                    <GradientStop Color="#1B1448" Offset="0.75"/>
                </LinearGradientBrush>
            </Border.Background>

            <!--CONTENEDOR PARA LOS COMPONENTES DEL LOGIN-->
            <Grid Height="402" Width="1000">
                <!--FILAS DE DIVISION PARA LA BARRA DE CERRAR-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <!--DIVISION DE LAS COLUMNAS EN LA PRIMERA FILA-->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <!--TITULO-->
                    <TextBlock Text="Vista Pevia de Impresión"
                                Foreground="DarkGray"
                               FontSize="13"
                               FontFamily="Arial"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                    <!--BOTON MINIMIZAR-->
                    <Button x:Name="btnMinimizar"
                            BorderThickness="0"
                            Content="-"
                            Foreground="White"
                            FontSize="17"
                            FontFamily="Arial"
                            Cursor="Hand"
                            Grid.Column="1" Click="btnMinimizar_Click">

                        <!--MIDIFICAR EL ESTILO DEL BOTON-->
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#28AEED"/>

                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <!--ANULAR PLANTILLA DETERMINADA DEL BOTON-->
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18"
                                        Height="19"
                                        CornerRadius="10"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>

                    <!--BOTON CERRAR-->
                    <Button x:Name="btnCerrar"
                            BorderThickness="0"
                            Content="X"
                            Foreground="White"
                            FontSize="13"
                            FontFamily="Arial"
                            Cursor="Hand"
                            Grid.Column="2" Click="btnCerrar_Click">

                        <!--MIDIFICAR EL ESTILO DEL BOTON-->
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#DA34AE"/>

                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C62DAE"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <!--ANULAR PLANTILLA DETERMINADA DEL BOTON-->
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18"
                                        Height="19"
                                        CornerRadius="10"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>
                </Grid>

                <Grid Grid.Row="1" Margin="0,0,-3,0">
                    <FlowDocumentReader Margin="10,40,41,45" Background="Azure">
                        <!-- Contenido de FlowDocumentReader -->
                        <FlowDocument Name="DocMain">
                            <Paragraph Foreground="White" FontFamily="Lucida Sans Unicode" FontSize="15" FlowDirection="LeftToRight">Listado de Ventas Realizadas</Paragraph>
                            <BlockUIContainer>
                                
                            </BlockUIContainer>
                         </FlowDocument>
                    </FlowDocumentReader>

                    <Button x:Name="btnImprimir" BorderThickness="0" Content="Imprimir" Cursor="Hand" Style="{StaticResource ResourceKey=triBotonAceptarForm}" Click="btnImprimir_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,55,312" Width="127">
                        <!-- Plantilla de botón -->
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="120" Height="40" CornerRadius="20" Background="DarkCyan">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <ListView Height="170" FontFamily="Book Antiqua" FontSize="11" Foreground="DarkCyan" ItemsSource="{Binding}" IsSynchronizedWithCurrentItem="True" Canvas.Left="100" Canvas.Top="0" x:Name="list" Margin="10,101,41,101">
                        <!-- Resto del contenido de ListView -->
                      

                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </ListView.ItemContainerStyle>

                            <ListView.View>
                                <GridView>
                                    <GridView.Columns>
                                        <GridViewColumn 
                                                Width="Auto"
                                                Header="Zona"
                                                DisplayMemberBinding="{Binding Path= Zona}"/>

                                        <GridViewColumn 
                                                Width="Auto"                                   
                                                Header="Sector"
                                                DisplayMemberBinding="{Binding Path= Sector}"/>
                                    <GridViewColumn Width="Auto" 
                                                        Header="N° Ticket" 
                                                        DisplayMemberBinding="{Binding Path= NTicket}" />
                                    <!--<GridViewColumn 
                                                Width="Auto" 
                                                Header="Hora Entrada"
                                                />-->
                                        <GridViewColumn Width="150">
                                            <GridViewColumn.HeaderTemplate>
                                                <DataTemplate>

                                                    <StackPanel>
                                                        <TextBlock Text="Fecha Y Hora" />
                                                        <TextBlock Text="De Entrada" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.HeaderTemplate>
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>

                                                    <StackPanel>
                                                        <TextBlock Text="{Binding FecHoraEntrada}" />
                                                        <!--<TextBlock Text="{Binding Transcurrido}" />-->
                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    <GridViewColumn Width="170">
                                        <GridViewColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <TextBlock Text="Fecha Y Hora" />
                                                    <TextBlock Text="De Salida" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.HeaderTemplate>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding FechaHoraSalida, StringFormat={}{0:dd/MM/yyyy HH:mm}}" />
                                                    <!--<TextBlock Text="{Binding Transcurrido}" />-->
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="130" 
                                                        Header="Cliente" 
                                                        DisplayMemberBinding="{Binding Path= Cliente}" />
                                    <GridViewColumn Width="Auto" 
                                                        Header="TipoVehiculo" 
                                                        DisplayMemberBinding="{Binding Path= TipoVehiculo}" />
                                    <GridViewColumn Width="Auto" 
                                                        Header="Patente" 
                                                        DisplayMemberBinding="{Binding Path= Patente}" />
                                    <GridViewColumn Width="100" 
                                                        Header="Duración"
                                                        DisplayMemberBinding="{Binding Path= Duracion}"/>
                                    <GridViewColumn Width="60" 
                                                        Header="Tarifa" 
                                                        DisplayMemberBinding="{Binding Path= Tarifa}"/>
                                    <GridViewColumn Width="60" 
                                                        Header="Total" 
                                                        DisplayMemberBinding="{Binding Path= Total}"/>
                                </GridView.Columns>
                                </GridView>
                            </ListView.View>
                        </ListView>
                </Grid>

            </Grid>

        </Border>
    </Border>

</Window>
